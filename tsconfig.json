{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "removeComments": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@application/*": [
        "./src/application/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@entity/*": [
        "./src/entity/*"
      ],
      "@graphql/*": [
        "./src/graphql/*"
      ],
      "@http/*": [
        "./src/http/*"
      ],
      "@service/*": [
        "src/service/*"
      ]
    }
  }
}
